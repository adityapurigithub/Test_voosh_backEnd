<link rel="stylesheet" href="/css/profile.css" />

<div class="profile-wrapper">
  <div class="profile">
    <div class="sign-out">
      <a href="/sign-out">
        <img
          src="https://cdn-icons-png.flaticon.com/512/5665/5665417.png"
          alt=""
          height="30px"
        />
      </a>
    </div>
    <div class="user-pic">
      <img src="https://cdn-icons-png.flaticon.com/512/560/560277.png" alt="" />
    </div>
    <div class="user-name">
      <h3>Name: <span><%=user.name%></span></h3>
    </div>
    <div class="user-phone">
      <h3>Phone: <span><%=user.phone%></span></h3>
    </div>
    <div class="user-order">
      <h3><a href="/order">Order</a></h3>
    </div>
  </div>
</div>
